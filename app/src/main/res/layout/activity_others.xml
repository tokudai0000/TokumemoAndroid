<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        app:itemIconTint="@drawable/bottom_navigation_item_state"
        app:itemTextColor="@drawable/bottom_navigation_item_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_item"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/settings_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/settings_title"
        app:layout_constraintTop_toBottomOf="@id/settings_title">

        <TextView
            android:id="@+id/settings_about_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <Button
                android:id="@+id/passwordSetting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="パスワード設定"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/customize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="カスタマイズ"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/aboutThisApp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="48dp"
                android:text="このアプリについて"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/inquiry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="お問い合わせ"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/sns"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="公式SNS"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/homePage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ホームページ"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/termsOfService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="利用規約"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="プライバシーポリシー"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>